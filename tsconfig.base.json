{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@amana-micro-frontend/auth": ["libs/auth/src/index.ts"],
      "@amana-micro-frontend/common-ui": ["libs/common-ui/src/index.ts"],
      "@amana-micro-frontend/data-models": ["libs/data-models/src/index.ts"],
      "@amana-micro-frontend/layout": ["libs/layout/src/index.ts"],
      "@amana-micro-frontend/material": ["libs/material/src/index.ts"],
      "@amana-micro-frontend/products": ["libs/products/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": false
  },
  "exclude": ["node_modules", "tmp"]
}
