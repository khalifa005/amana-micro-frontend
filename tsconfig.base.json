{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "no-empty": false,
    // "no-unused-vars": 0,
    // "@typescript-eslint/no-unused-vars": 0,
    // "resolveJsonModule": true,
    "allowSyntheticDefaultImports":true,
    // "target": "es2020",
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@amana-micro-frontend/auth": ["libs/auth/src/index.ts"],
      "@amana-micro-frontend/common-ui": ["libs/common-ui/src/index.ts"],
      "@amana-micro-frontend/data-models": ["libs/data-models/src/index.ts"],
      "@amana-micro-frontend/material": ["libs/material/src/index.ts"],
      "@amana-micro-frontend/products": ["libs/products/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": false,
  },
  "exclude": ["node_modules", "tmp"]
}
